<div class="col-xs-6 col-sm-3 col-md-3 col-lg-3">
  <div class="product">
    <div class="thumbnail">
      <div class="view-detail-product">
        <a href="#"><i class="fa fa-link"></i></a>
        <a href="<%= document_path(document) %>"><i class="fa fa-search"></i></a>
      </div>
      <%= image_tag Settings.image, class: "img-responsive" %>
      <div class="caption">
        <h3 class="product_name text-center"><%= document.name %></h3>
        <hr>
        <div class="row">
          <div class="col-md-6 text-left">
            <p>
              <i class="fa fa-calendar"></i>
              <span>
                <%= document.created_at.strftime(Settings.format_date) %>
              </span>
            </p>
            <p class="document-user-name">
              <i class="fa fa-share-square-o"></i>
              <span><%= document.user.name %></span>
            </p>
          </div>
          <div class="col-md-6 text-right">
            <p>
              <i class="fa fa-download"></i>
              <span><%= document.downloads.size %></span>
              <span><%= t ".downloads" %></span>
            </p>
            <p>
              <i class="fa fa-eye"></i>
              <span><%= document.reads.size %></span>
              <span><%= t ".views" %></span>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
