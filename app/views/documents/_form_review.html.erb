<div class="modal" id="mynewreview" tabindex="-1" role="dialog"
  aria-labelledby = "myModalLabel" aria-hidden = "true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"
          aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title mynewreview" id="myModalLabel"><%= @button %></h4>
      </div>
      <div id ="mynewreview1">
      <%= simple_form_for @review do |f| %>
        <div class="rating-content">
          <%= f.label :rating %>
          <% rate_size = @review.rating.to_i %>
          <% rate_size.times do |n| %>
            <%= image_tag(Settings.star_on, title: Settings.reivews[n],
              alt: "#{n+1}", class: "star-review") %>
          <% end %>
          <% (5-rate_size).times do |n| %>
            <%= image_tag(Settings.star_off, title: Settings.reivews[n],
              alt: "#{rate_size+n+1}", class: "star-review") %>
          <% end %>
          <%= f.hidden_field :id %>
          <%= f.hidden_field :rating %>
          <%= f.hidden_field :document_id, value: @document.id %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default"
            data-dismiss="modal" id="mynewcategoryclose">
            <%= t "title.close" %>
          </button>
          <%= f.submit @button, class: "btn btn-default", id: "review-btn" %>
        </div>
      <% end %>
    </div>
    </div>
  </div>
</div>
