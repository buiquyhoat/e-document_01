<div id="documents-list-admin">
  <table class="cart table table-hover new-order">
    <thead>
      <tr class="info row">
        <th class="col-md-1"><%= t ".stt" %></th>
        <th class="col-md-2"><%= t ".user_name" %></th>
        <th class="col-md-2"><%= t ".action_upgrade_user" %></th>
        <th class="col-md-2"><%= t ".action_delete_user" %></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each_with_index do |user, index|%>
        <tr class="row">
          <td class="col-md-1"><%= index + 1 %></td>
          <td class="col-md-2"><%= user.name %></td>
          <th class="col-md-2 option-product-admin">
            <% unless user.admin? %>
              <%= link_to admin_user_path(user), method: :patch,
                class: "btn btn-default", data: {confirm: t(".update_confirm")} do %>
                <span class="fa fa-check"></span>
              <% end %>
            <% end %>
          </th>
          <th>
            <%= link_to admin_user_path(user), method: :delete,
              class: "btn btn-default", data: {confirm: t(".delete_confirm")} do %>
              <span class="fa fa-ban"></span>
            <% end %>
          </th>
        </tr>
      <% end %>
      <%= paginate @users %>
    </tbody>
  </table>
</div>
