<% if @team.has_admin? current_user %>
  <div class="row">
    <div class="col-md-4 col-md-offset-1">
      <%= form_for [@team.organization, @team] do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
        <%= f.submit t("team.edit.edit"), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
<% end %>
