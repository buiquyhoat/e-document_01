<% friends.each do |user| %>
  <span id="<%= dom_id(user) %>">
    <% if current_user.had_conversation? user %>
      <% existed_room = Chatroom.created_room(current_user, user).first %>
      <span><%= t("continue_chat", guest: user.name) %></span>
      <%= link_to existed_room.title, chatroom_path(existed_room) %>
      <span><%= t("with") %></span>
      <%= link_to user.name %>
      <% else %>
        <%= link_to user.name, new_chatroom_path(guest_id: user.id),
          class: "btn btn-primary" %>
    <% end %>
    <br />
  </span>
<% end %>
