<table class="table table-hover" id="list_user">
  <thead class="title_table">
    <th><%= t "views.users.stt" %></th>
    <th class="user_name"><b><%= t "views.users.name" %></b></th>
    <th class="user_email"><b><%= t "views.users.email" %></b></th>
    <th></th>
  </thead>
  <tbody>
    <% @users.each_with_index do |user, index| %>
      <tr>
      	<td><%= index + 1 %></td>
        <td><b><%= link_to user.name, user %></b></td>
        <td><b><%= user.email %></b></td>
      </tr>
    <% end %>
  </tbody>
</table>
